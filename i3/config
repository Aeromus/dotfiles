bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "(gxmessage -timeout 10 -buttons 'GTK_STOCK_CANCEL:1,GTK_STOCK_OK:0' -default GTK_STOCK_OK 'Logging out in 10 seconds' -sticky -wrap &> ~/.log/gxmessage.log && i3-msg exit)"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym b resize shrink width 10 px or 10 ppt
        bindsym p resize grow height 10 px or 10 ppt
        bindsym n resize shrink height 10 px or 10 ppt
        bindsym f resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"

	# enter precision resize mode: $mod+r
        bindsym $mod+r mode "precision"
}

mode "precision" {
        # These bindings trigger as soon as you enter the precision resize mode

	# They are identical keybinds to the standard resize
	# mode but resize at a much smaller increment to allow
	# for precision window placement.
	bindsym b resize shrink width 10 px or 10 ppt
        bindsym p resize grow height 10 px or 10 ppt
        bindsym n resize shrink height 10 px or 10 ppt
        bindsym f resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

	# back to normal: Enter
	bindsym Return mode "default"

	# back to standard resize: Escape, $mod+r
	bindsym Escape mode "resize"
	bindsym $mod+r mode "resize"

}

bindsym $mod+r mode "resize"

